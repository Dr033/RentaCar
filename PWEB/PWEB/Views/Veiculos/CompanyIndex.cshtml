@model IEnumerable<PWEB.Models.Veiculo>
@{
    ViewBag.Title = "CompanyIndex";
}




<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Categorias.NomeCategoria)
        </th>
        <th>

        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome_veiculo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Marca)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kilometros)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Defeitos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrecoDia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Categorias.NomeCategoria)
            </td>
            <td>
                <img src="~/uploads/@item.Imagem" class="image-thumbnail" width="150" height="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome_veiculo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kilometros)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Defeitos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecoDia)
            </td>
            <td>
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id_veiculo }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id_veiculo }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id_veiculo })
            </td>
        </tr>
    }

</table>
